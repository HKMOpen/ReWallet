<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" 
	android:background="#00000000">
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/textbox_stroke_write">
		<RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>
			<EditText 
				android:id="@+id/profileView_textbox"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:singleLine="true"
				android:ellipsize="end"
				android:layout_marginLeft="20dip"
				android:layout_marginRight="35dip"
				android:background="#00000000"
				android:textColorHint="@color/global_Text_SubTitle"
				android:textColor="@color/global_Text_Title"/>
			
			<ImageView 
				android:id="@+id/profileView_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="20dip"
				android:src="@drawable/editprofile_arrow"
				/>
		</RelativeLayout>
	</LinearLayout>
	<Button 
		android:id="@+id/profileView_btn"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#00000000"/>
	
</RelativeLayout>
