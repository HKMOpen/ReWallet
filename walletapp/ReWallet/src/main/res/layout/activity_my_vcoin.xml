     			android:layout_marginLeft="25dip"
     			android:orientation="vertical">
     			<TextView 
     				android:layout_width="wrap_content"
     				android:layout_height="wrap_content"
     				android:text="@string/myVcoinActivity_myHistorys"
     				android:textColor="@color/global_Text_Title"
     				android:textSize="14sp"/>
     			<TextView 
     				android:layout_width="wrap_content"
     				android:layout_height="wrap_content"
     				android:text="@string/myVcoinActivity_myHistorys_sub"
     				android:textColor="@color/global_Text_SubTitle"
     				android:textSize="11sp"/>
     		</LinearLayout>
     		<ImageView 
     			android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:src="@drawable/myvcoin_menu_arrow"
     			android:layout_centerVertical="true"
     			android:layout_alignParentRight="true"
     			android:layout_marginRight="30dip"/>
