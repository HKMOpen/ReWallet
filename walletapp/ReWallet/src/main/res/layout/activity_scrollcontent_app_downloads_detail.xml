<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/appDownloadsDetailactivity_horizontal_margin"
    android:paddingRight="@dimen/appDownloadsDetailactivity_horizontal_margin"
    android:background="@color/global_activity_bg"
    android:scrollbars="none"
    android:id="@+id/appDetail_scrollView">
<LinearLayout 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView 
			android:id="@+id/appDownloadsDetail_imgAppIcon"
			android:layout_width="90dip"
			android:layout_height="90dip"
			android:layout_gravity="center_vertical"/>
		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="15dip"
			android:paddingTop="8dip"
			android:paddingBottom="8dip"
			android:orientation="vertical"
			android:layout_gravity="center_vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" >
				<ImageView 
					android:id="@+id/appDownloadsDetail_imgCoin"
					android:layout_width="30dip"
					android:layout_height="30dip"
					android:src="@drawable/rewardchannel_vcoin"
					android:layout_centerVertical="true" 
					android:layout_alignParentRight="true"/>
				<TextView 
					android:id="@+id/appDownloadsDetail_tvCoinCount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/global_Text_Title"
					android:layout_toLeftOf="@id/appDownloadsDetail_imgCoin"
					android:textSize="20sp"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_marginRight="5dip"
					/>
				<TextView
					android:id="@+id/appDownloadsDetail_tvAppName"
					android:layout_toLeftOf="@id/appDownloadsDetail_tvCoinCount"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/global_Text_Title"
					android:textSize="16sp"
					android:singleLine="true"
					android:ellipsize="end"
					android:layout_marginRight="3dip"
					android:layout_centerVertical="true" />
			</RelativeLayout>
			
			<TextView 
				android:id="@+id/appDownloadsDetail_tvVendor"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="13sp"
				android:textColor="@color/global_Text_SubTitle"
				android:textStyle="italic"
				android:layout_weight="1"
				/>
			<!-- 
			<TextView 
				android:id="@+id/appDownloadsDetail_tvCategory"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:layout_weight="1"
				android:textColor="#999999"/>
				 -->
		</LinearLayout>
	</LinearLayout>
	<ImageView 
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/bg_cutline"
		android:layout_marginTop="15dip"
		android:layout_marginBottom="15dip"/>
	
	
	<TextView 
		android:id="@+id/appDownloadsDetail_tvMainDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dip"
		android:layout_margin="15dip"
		android:textColor="@color/global_Text_Title"/>
	<HorizontalScrollView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dip"
		android:scrollbars="none"
		>
		<LinearLayout 
			android:id="@+id/appDownloads_layout_imageContent"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			></LinearLayout>
	</HorizontalScrollView>
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dip"
		android:visibility="gone">
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/appdownloads_usercommnet_icon"/>
		<ImageView 
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:background="@drawable/bg_cutline"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"/>
		<com.imusic.rewallet.widgets.RewardDetailCommentListView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/appDownloads_lvUserComment"
			/>
	</LinearLayout>
