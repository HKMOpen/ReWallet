<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dip"
	android:orientation="vertical" >
	
	<RelativeLayout
		android:id="@+id/rewardDetail_commentlist_iconUsername"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		<ImageView
			android:id="@+id/rewardDetail_commentlist_imgUserIcon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:src="@drawable/rewarddetail_comment_usericon" />
		<LinearLayout
			android:id="@+id/rewardDetail_commentlist_layout_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/rewardDetail_commentlist_imgUserIcon"
			android:background="@drawable/navi_bg_shadow"
			android:orientation="horizontal" >
			<TextView
				android:id="@+id/rewardDetail_commentlist_tvUserName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dip"
				android:textColor="@color/global_bodyTextColor_default"
				android:text="USER A" />
		</LinearLayout>
	</RelativeLayout>
	
	<TextView 
		android:id="@+id/rewardDetail_commentlist_layout_userComment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:paddingTop="5dip"
		android:paddingLeft="5dip"
		android:paddingRight="10dip"
		android:paddingBottom="0dip"
		android:text="@string/rewardDetaillActivity_UserComment"
		android:textSize="10sp"
		android:textColor="@color/global_bodyTextColor_default"
		/>
	<TextView 
		android:id="@+id/rewardDetail_commentlist_tvCommentContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="10sp"
		android:paddingTop="5dip"
		android:paddingLeft="5dip"
		android:paddingRight="10dip"
		android:paddingBottom="5dip"
		android:textColor="@color/global_bodyTextColor_default"
		/>
	

</LinearLayout>
