<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:padding="10dip" 
	android:background="@color/global_bg_white">
	<RelativeLayout 
		android:layout_width="80dip"
		android:layout_height="80dip">
		<ImageView 
			android:id="@+id/missionListItem_ivImage"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/mission_thumbnail_default"/>
		<com.imusic.rewallet.widgets.InclineTextView
			android:id="@+id/missionListItem_tvStatus"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:visibility="gone"
			android:textSize="16sp"
			android:textColor="@color/global_bodyTextColor_highLight"
			android:text="Complete" />
	</RelativeLayout>
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingLeft="10dip"
		android:paddingRight="5dip">
		<RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/missionListItem_vcoin"
				android:layout_width="25dip"
				android:layout_height="25dip"
				android:layout_marginTop="2dip"
				android:src="@drawable/rewardchannel_vcoin" 
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"/>
			<TextView 
					android:id="@+id/missionListItem_tvCoinCount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toLeftOf="@id/missionListItem_vcoin"
					android:layout_marginRight="8dip"
					android:layout_alignParentTop="true"
					android:text="10"
					android:textSize="20sp"
					android:textColor="@color/global_bodyTextColor_highLight"/>
			<TextView 
				android:id="@+id/missionListItem_tvTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/missionListItem_tvCoinCount"
				android:lines="2"
				android:textSize="20sp"
				android:ellipsize="end"
				android:textColor="@color/global_titleText"
				android:text="Mission Title,,,....."/>
		</RelativeLayout>
		<TextView 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="11sp"
			android:text="@string/global_Mission_briefDescription"
			android:textColor="@color/global_titleText"/>
		<TextView 
			android:id="@+id/missionListItem_tvDescription"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:ellipsize="end"
			android:textSize="11sp"
			android:textColor="@color/global_titleText"
			android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
	</LinearLayout>
	

</LinearLayout>
