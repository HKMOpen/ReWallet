<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/global_searchbar_bg"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:id="@+id/searchBar_layout"
	>
	<ImageButton 
		android:id="@+id/searchBar_imgbtnIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="15dip"
		android:layout_centerVertical="true"
		android:src="@drawable/searchbar_search"
		android:background="#00000000"
		/>
	<ImageButton 
		android:id="@+id/searchBar_imgbtnSetting"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="15dip"
		android:layout_centerVertical="true"
		android:src="@drawable/actionbar_setting"
		android:background="#00000000"
		/>
	<!-- 
	<ImageButton 
		android:id="@+id/searchBar_imgbtnCountry"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15dip"
		android:layout_centerVertical="true"
		android:src="@drawable/searchbar_country"
		android:background="#00000000"
		/>
	
	<ImageButton 
		android:id="@+id/searchBar_imgbtnCategory"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/searchBar_imgbtnCountry"
		android:layout_marginRight="15dip"
		android:layout_centerVertical="true"
		android:src="@drawable/searchbar_category"
		android:background="#00000000"
		/>
		 -->
	<ToggleButton 
		android:id="@+id/searchBar_tgbtnCountry"
		android:layout_width="30dip"
		android:layout_height="30dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15dip"
		android:layout_centerVertical="true"
		android:background="@drawable/toggle_bg_searchbar_country"
		android:textOn=""
		android:textOff=""
		/> 
	<ToggleButton 
		android:id="@+id/searchBar_tgbtnCategory"
		android:layout_width="30dip"
		android:layout_height="30dip"
		android:layout_toLeftOf="@id/searchBar_tgbtnCountry"
		android:layout_marginRight="15dip"
		android:layout_centerVertical="true"
		android:background="@drawable/toggle_bg_searchbar_category"
		android:textOn=""
		android:textOff=""
		/>
	<EditText 
		android:id="@+id/searchBar_etKeyword"
		android:layout_width="match_parent"
		android:layout_height="35dip"
		android:layout_toLeftOf="@id/searchBar_tgbtnCategory"
		android:layout_toRightOf="@id/searchBar_imgbtnIcon"
		android:layout_centerVertical="true"
		android:background="#311D33"
		android:layout_marginLeft="15dip"
		android:layout_marginRight="15dip"
		android:paddingLeft="15dip"
		android:textColorHint="@color/global_Text_SubTitle"
		android:singleLine="true"
		android:inputType="textCapWords"
		android:hint="@string/searchbar_edittext_hint"
		android:textColor="#FFFFFF"/>

	<Button 
		android:id="@+id/searchBar_btnCover"
		android:layout_toLeftOf="@id/searchBar_tgbtnCategory"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#00000000"/>
</RelativeLayout>
