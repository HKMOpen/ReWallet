<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:id="@+id/btnHighlightReversal_layout"
	android:background="@color/btn_highlightReversal_default_bg">
	
	<TextView 
		android:id="@+id/btnHighlightReversal_tvNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="15dip"
		android:layout_marginTop="8dip"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:textColor="@color/btn_highlightReversal_default_NumberTextColor"
		android:textSize="10sp"
		android:text="0"/>
	<TextView 
		android:id="@+id/btnHighlightReversal_tvButtonName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dip"
		android:layout_marginBottom="15dip"
		android:layout_centerInParent="true"
		android:text="buttonName"
		android:textColor="@color/btn_highlightReversal_default_NumberTextColor"
		android:textSize="14sp"
		android:textStyle="bold"/>
	<ImageView 
		android:id="@+id/btnHighlightReversal_imgIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/btnHighlightReversal_tvButtonName"
		android:layout_marginRight="20dip"/>
	<Button 
		android:id="@+id/btnHighlightReversal_btn"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#00000000"/>

</RelativeLayout>
